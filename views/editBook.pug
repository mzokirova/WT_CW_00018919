doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Edit Book
    link(rel="stylesheet", href="/styles/style.css")
  body
    .container
      h1#edit-book-title Edit Book
      form#edit-book-form(action=`/updateBook/${book.id}` method="POST")
        
        div.form-group
          label(for="book-title") Title:
          input#book-title(type="text" name="title" value=`${book.title}` required)

        div.form-group
          label(for="book-author") Author:
          input#book-author(type="text" name="author" value=`${book.author}` required)

        div.form-group
          label(for="book-genre") Genre:
          input#book-genre(type="text" name="genre" value=`${book.genre}` required)

        div.form-group
          label(for="book-published") Published:
          input#book-published(type="text" name="published" value=`${book.published}`)

        div.form-group
          label(for="book-pages") Pages:
          input#book-pages(type="number" name="pages" value=`${book.pages}` required)

        button#update-book-btn(type="submit") Update Book
        a.btn.btn-secondary(href="/homepage") Back to Homepage