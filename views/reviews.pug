doctype html
html
  head
    title Book Reviews
    link(rel="stylesheet", href="/styles/style.css")
  body
    .container
      h1 Reviews for this Book
      each review in reviews
        .review-card
          p ⭐ Rating: #{review.rate} / 5
          p 📝 #{review.message}
          form(action="/deleteReview/#{review.id}" method="post")
            button.btn.btn-danger(type="submit") Delete Review
      a.btn.btn-secondary(href="/homepage") Back to Homepage
