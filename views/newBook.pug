doctype html
html
  head
    title Add a New Book
    link(rel="stylesheet", href="/styles/style.css")
  body
    .new-book-page 
      h1 Add a New Book
      form(action="/newBook" method="post" onsubmit="window.location.href='/homepage'; return false;")
        input(type="text" name="title" placeholder="Book Title" required)
        input(type="text" name="author" placeholder="Author" required)
        input(type="text" name="genre" placeholder="Genre" required)
        input(type="text" name="year" placeholder="Published Year" required)
        input(type="number" name="pages" placeholder="Number of pages" required)
        button(type="submit") Add Book